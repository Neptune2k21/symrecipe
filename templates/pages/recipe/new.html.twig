
{% extends "base.html.twig" %}

{% block title %}Création d'une recette{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Création d'une recette</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.time) }}
                {{ form_widget(form.time) }}
                <div class="form-error">
                    {{ form_errors(form.time) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.nbPersons) }}
                {{ form_widget(form.nbPersons) }}
                <div class="form-error">
                    {{ form_errors(form.nbPersons) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.diffculty) }}
                {{ form_widget(form.diffculty) }}
                <div class="form-error">
                    {{ form_errors(form.diffculty) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            <div class="form-check mt-4">
                {{ form_widget(form.isFavorite) }}
                {{ form_label(form.isFavorite) }}
                <div class="form-error">
                    {{ form_errors(form.isFavorite) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.ingredients) }}
                <div class="ingredients-grid">
                    {{ form_widget(form.ingredients) }}
                </div>
                <div class="form-error">
                    {{ form_errors(form.ingredients) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.submit) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ingredients-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }
        .form-error {
            color: red;
        }
    </style>
{% endblock %}